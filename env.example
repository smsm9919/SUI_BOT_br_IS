# === Bybit Exchange Credentials ===
# احصل على API Key و Secret من حساب Bybit الخاص بك
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# === Trading Symbol ===
# رمز التداول - يمكن تغييره لأي عملة أخرى على Bybit
SYMBOL=ASTR/USDT:USDT

# === Time Frame ===
# الإطار الزمني للشموع: 1m, 5m, 15m, 1h, 4h, 1d
INTERVAL=15m

# === Leverage & Risk ===
# الرافعة المالية (1-100)
LEVERAGE=10
# نسبة المخاطرة من الرصيد (0.01 - 1.0)
RISK_ALLOC=0.60

# === Position Mode ===
# نمط المراكز: oneway (للمراكز الأحادية) أو hedge (للتحوط)
BYBIT_POSITION_MODE=oneway

# === Range Filter Settings ===
# فترة الـ Range Filter
RF_PERIOD=20
# مضاعف الـ Range Filter
RF_MULT=3.5

# === Spread Protection ===
# الحد الأقصى للسبريد المسموح به (بالنقاط الأساسية)
MAX_SPREAD_BPS=6.0

# === Position Management ===
# الكمية النهائية للغبار (إغلاق تلقائي عند الوصول)
FINAL_CHUNK_QTY=40.0
# الحد الأدنى للكمية المتبقية
RESIDUAL_MIN_QTY=9.0

# === Web Server ===
# منفذ تشغيل السيرفر
PORT=5000
# الرابط الذاتي للإحياء (للتشغيل على السحابة)
SELF_URL=https://your-app-name.onrender.com

# === Advanced Settings (Optional) ===
# إعدادات متقدمة - يمكن تركها بالقيم الافتراضية

# RSI Period
# RSI_LEN=14

# ADX Period  
# ADX_LEN=14

# ATR Period
# ATR_LEN=14

# Golden Entry Score Threshold
# GOLDEN_ENTRY_SCORE=6.0

# Golden Entry ADX Threshold
# GOLDEN_ENTRY_ADX=20.0

# Maximum Trades Per Hour
# MAX_TRADES_PER_HOUR=6

# Cooldown After Close (seconds)
# COOLDOWN_SECS_AFTER_CLOSE=60

# === Bot Mode ===
# وضع البوت - لا تغير هذه القيم
# EXECUTE_ORDERS=true
# DRY_RUN=false
# SHADOW_MODE_DASHBOARD=false
# LOG_LEGACY=false
# LOG_ADDONS=true
# RESUME_ON_RESTART=true
